// class to store info for the event

class LTTrack: public TNamed {
	public:
		LTTrack();
		~LTTrack();

    void clear();
    void print();
    // data elements

    Int_t evId;    // event id
    Int_t trkId;
    Int_t parentId;
    Int_t status;
    LTTraject traject;
    Double_t ke;   // kinetic energy
    Double_t time;
    TVector3 position;
    

ClassDef(LTTrack,1)
};
